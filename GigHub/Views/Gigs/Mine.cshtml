@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Mine";
}

<h2>My Upcoming Gigs</h2>

<main>
    <ul class="gigs voffset">
        @foreach (var gig in Model)
        {
            <li>
                <div class="date">
                    <div class="month">@gig.Date.ToString("MMM")</div>
                    <div class="day">@gig.Date.ToString("d ")</div>
                </div>
                <div class="details">
                    <span class="artist">
                        @gig.Venue
                    </span>
                    <span class="genre">
                        @gig.Genre.Name
                    </span>
                    <div class="actions">
                        <a href="@Url.Action("Edit", "Gigs", new { id = gig.Id })">Edit</a>
                    </div>
                </div>
            </li>
        }
    </ul>
</main>